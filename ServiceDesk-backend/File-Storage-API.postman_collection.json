{
  "info": {
    "name": "File Storage Service API",
    "description": "Complete API collection for File Storage Service with upload, download, sharing, and folder management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api/v1",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "fileId",
      "value": "",
      "type": "string"
    },
    {
      "key": "folderId",
      "value": "",
      "type": "string"
    },
    {
      "key": "shareToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "organizationId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.data.token);",
                  "    console.log('Token saved:', response.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"your-email@example.com\",\n  \"password\": \"your-password\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "File Operations",
      "item": [
        {
          "name": "Upload Single File",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('fileId', response.data._id);",
                  "    console.log('File ID saved:', response.data._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "folderId",
                  "value": "{{folderId}}",
                  "type": "text",
                  "disabled": true
                },
                {
                  "key": "description",
                  "value": "Test file upload",
                  "type": "text"
                },
                {
                  "key": "tags",
                  "value": "[\"test\", \"document\"]",
                  "type": "text"
                },
                {
                  "key": "isPublic",
                  "value": "false",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/files/upload",
              "host": ["{{baseUrl}}"],
              "path": ["files", "upload"]
            }
          }
        },
        {
          "name": "Upload Multiple Files",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "files",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "files",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "folderId",
                  "value": "{{folderId}}",
                  "type": "text",
                  "disabled": true
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/files/upload/multiple",
              "host": ["{{baseUrl}}"],
              "path": ["files", "upload", "multiple"]
            }
          }
        },
        {
          "name": "Get File Metadata",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/files/{{fileId}}",
              "host": ["{{baseUrl}}"],
              "path": ["files", "{{fileId}}"]
            }
          }
        },
        {
          "name": "Download File",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/files/{{fileId}}/download",
              "host": ["{{baseUrl}}"],
              "path": ["files", "{{fileId}}", "download"]
            }
          }
        },
        {
          "name": "Preview File",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/files/{{fileId}}/preview",
              "host": ["{{baseUrl}}"],
              "path": ["files", "{{fileId}}", "preview"]
            }
          }
        },
        {
          "name": "Update File Metadata",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fileName\": \"updated-filename.pdf\",\n  \"description\": \"Updated description\",\n  \"tags\": [\"updated\", \"tags\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/files/{{fileId}}",
              "host": ["{{baseUrl}}"],
              "path": ["files", "{{fileId}}"]
            }
          }
        },
        {
          "name": "Move File to Folder",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"folderId\": \"{{folderId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/files/{{fileId}}/move",
              "host": ["{{baseUrl}}"],
              "path": ["files", "{{fileId}}", "move"]
            }
          }
        },
        {
          "name": "Soft Delete File",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/files/{{fileId}}",
              "host": ["{{baseUrl}}"],
              "path": ["files", "{{fileId}}"]
            }
          }
        },
        {
          "name": "Permanently Delete File",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/files/{{fileId}}/permanent",
              "host": ["{{baseUrl}}"],
              "path": ["files", "{{fileId}}", "permanent"]
            }
          }
        },
        {
          "name": "Restore File",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/files/{{fileId}}/restore",
              "host": ["{{baseUrl}}"],
              "path": ["files", "{{fileId}}", "restore"]
            }
          }
        },
        {
          "name": "Search Files",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/files/search?q=test",
              "host": ["{{baseUrl}}"],
              "path": ["files", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "test"
                }
              ]
            }
          }
        },
        {
          "name": "Get Storage Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/files/stats",
              "host": ["{{baseUrl}}"],
              "path": ["files", "stats"]
            }
          }
        }
      ]
    },
    {
      "name": "Folder Operations",
      "item": [
        {
          "name": "Create Folder",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('folderId', response.data._id);",
                  "    console.log('Folder ID saved:', response.data._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"My Documents\",\n  \"description\": \"Personal documents folder\",\n  \"isPublic\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/folders",
              "host": ["{{baseUrl}}"],
              "path": ["folders"]
            }
          }
        },
        {
          "name": "Create Subfolder",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Subfolder\",\n  \"description\": \"Nested folder\",\n  \"parentId\": \"{{folderId}}\",\n  \"isPublic\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/folders",
              "host": ["{{baseUrl}}"],
              "path": ["folders"]
            }
          }
        },
        {
          "name": "Get Root Folder Contents",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/folders",
              "host": ["{{baseUrl}}"],
              "path": ["folders"]
            }
          }
        },
        {
          "name": "Get Folder Contents",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/folders/{{folderId}}",
              "host": ["{{baseUrl}}"],
              "path": ["folders", "{{folderId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Sharing Operations",
      "item": [
        {
          "name": "Create Share Link",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('shareToken', response.data.token);",
                  "    console.log('Share Token saved:', response.data.token);",
                  "    console.log('Share URL:', response.data.url);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"expiresIn\": 3600,\n  \"maxDownloads\": 10,\n  \"password\": \"test123\",\n  \"allowedEmails\": [],\n  \"canDownload\": true,\n  \"canView\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/files/{{fileId}}/share",
              "host": ["{{baseUrl}}"],
              "path": ["files", "{{fileId}}", "share"]
            }
          }
        },
        {
          "name": "Create Share Link (No Password)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"expiresIn\": 86400,\n  \"maxDownloads\": 5,\n  \"canDownload\": true,\n  \"canView\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/files/{{fileId}}/share",
              "host": ["{{baseUrl}}"],
              "path": ["files", "{{fileId}}", "share"]
            }
          }
        },
        {
          "name": "Create Share Link (Email Restricted)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"expiresIn\": 86400,\n  \"allowedEmails\": [\"user@example.com\", \"admin@example.com\"],\n  \"canDownload\": true,\n  \"canView\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/files/{{fileId}}/share",
              "host": ["{{baseUrl}}"],
              "path": ["files", "{{fileId}}", "share"]
            }
          }
        },
        {
          "name": "Access Shared File (No Auth)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"password\": \"test123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/files/share/{{shareToken}}",
              "host": ["{{baseUrl}}"],
              "path": ["files", "share", "{{shareToken}}"]
            }
          }
        },
        {
          "name": "Download Shared File (No Auth)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"password\": \"test123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/files/share/{{shareToken}}/download",
              "host": ["{{baseUrl}}"],
              "path": ["files", "share", "{{shareToken}}", "download"]
            }
          }
        }
      ]
    },
    {
      "name": "Organization Context",
      "item": [
        {
          "name": "Upload File (Organization)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-Organization-ID",
                "value": "{{organizationId}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "description",
                  "value": "Organization file",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/files/upload",
              "host": ["{{baseUrl}}"],
              "path": ["files", "upload"]
            }
          }
        },
        {
          "name": "Get Organization Files",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-Organization-ID",
                "value": "{{organizationId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/folders",
              "host": ["{{baseUrl}}"],
              "path": ["folders"]
            }
          }
        },
        {
          "name": "Get Organization Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-Organization-ID",
                "value": "{{organizationId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/files/stats",
              "host": ["{{baseUrl}}"],
              "path": ["files", "stats"]
            }
          }
        }
      ]
    }
  ]
}
